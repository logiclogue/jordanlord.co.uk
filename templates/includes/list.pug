include icon.pug
include iconGithub.pug
include iconYouTube.pug

mixin list(items)
    table
        each item, i in items
            tr
                td
                    if (typeof item.publishDate !== 'undefined')
                        != item.publishDate.toISOString().substring(0, 10) + ' '

                td
                    a(href='/' + item.path)= item.title

                td
                    +icon('https://jordanlord.co.uk/', item.web, 'globe')

                td
                    +iconGithub(item.github)

                td
                    +iconYouTube(item.youtube)
