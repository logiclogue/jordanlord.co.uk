mixin list(items)
    table
        each item, i in items
            tr
                td
                    if (typeof item.publishDate !== 'undefined')
                        != item.publishDate.toISOString().substring(0, 10) + ' '

                td
                    a(href='/' + item.path)= item.title

                td
                    if (item.web)
                        a(href='http://jordanlord.co.uk/' + item.web)
                            i.fa.fa-globe

                td
                    if (item.github)
                        a(href='https://github.com/' + item.github)
                            i.fa.fa-github

                td
                    if (item.youtube)
                        a(href='https://youtu.be/' + item.youtube)
                            i.fa.fa-youtube
