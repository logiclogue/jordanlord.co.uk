include iconGithub.pug
include iconGitlab.pug
include icon.pug
include iconYouTube.pug
include shortDate.pug

mixin list(items)
    table.list
        each item, i in items
            tr
                td
                    +shortDate(item.publishDate) + ' '

                td
                    a(href='/' + item.path)= item.title

                td !{item.platform}

                td
                    +icon('', item.web, 'globe')

                td
                    +iconGithub(item.github)
                    +iconGitlab(item.gitlab)

                td
                    +iconYouTube(item.youtube)
